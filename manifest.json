{
  "manifest_version": 2,

  "name": "HSBC Friendly Account Names",
  "description": "Prettify account names in HSBC Internet Banking",
  "version": "0.0.2",
  "permissions": [
    "http://www.hsbc.co.uk/*",
    "https://www.hsbc.co.uk/*"
  ],
  "browser_action": {
    "default_icon": "hsbc.png",
    "popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.hsbc.co.uk/*",
        "https://www.hsbc.co.uk/*"
      ],
      "js": [
        "rename.js"
      ],
      "run_at": "document_end"
    }
  ]
}
